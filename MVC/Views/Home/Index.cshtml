@model PayCal_MVC.Models.HomeViewModel
@{
    ViewData["Title"] = "Overview";
}
<h2>Overview</h2>
<div class="card">
    <h3>Permanent Employees</h3>
    <div id="outputConsolePerm">
        @for(var i = 0; i < Model.permCount; i++)
        {<code>ID: @Model.permList[i].EmployeeID Name: @Model.permList[i].FName @Model.permList[i].LName Salary: @Model.permList[i].Salaryint Bonus: @Model.permList[i].Bonusint</code><br>}
    </div>

    <div id="outputTablePerm">
        <table>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Bonus</th>
          </tr>
          @for(var i = 0; i < Model.permCount; i++)
            {<tr>
                <td>@Model.permList[i].EmployeeID</td>
                <td>@Model.permList[i].FName @Model.permList[i].LName</td>
                <td>£@Model.permList[i].Salaryint</td>
                <td>£@Model.permList[i].Bonusint</td>
            </tr>}
        </table>
    </div><br>

    <h3>Temporary Employees</h3>
    <div id="outputConsoleTemp">
        @for(var i = 0; i < Model.tempCount; i++)
        {<code>ID: @Model.tempList[i].EmployeeID Name: @Model.tempList[i].FName @Model.tempList[i].LName Day Rate: @Model.tempList[i].DayRateint Weeks Worked: @Model.tempList[i].WeeksWorkedint</code><br>}    
    </div>

    <div  id="outputTableTemp">
        <table>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Day Rate</th>
            <th>Weeks Worked</th>
          </tr>
          @for(var i = 0; i < Model.tempCount; i++)
            {<tr>
                <td>@Model.tempList[i].EmployeeID</td>
                <td>@Model.tempList[i].FName @Model.tempList[i].LName</td>
                <td>£@Model.tempList[i].DayRateint</td>
                <td>@Model.tempList[i].WeeksWorkedint</td>
            </tr>}
        </table>
    </div><br>

    <p>Total Employees: @(Model.tempCount + Model.permCount)</p>
</div>

<div class="column">
    <div class="cards">
        <button id="toggleTable_btn" onclick="toggleTable()">Toggle Console View</button>
    </div>
</div>