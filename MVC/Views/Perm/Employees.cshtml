@model PayCal_MVC.Models.PermViewModel
@{
    ViewData["Title"] = "Permanent Employees";
}

<h2>Permanent Employee Management</h2>

<div class="card" id="outputTablePerm">
    <table>
        <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Bonus</th>
        </tr>
        @for(var i = 0; i < Model.Employees.Count; i++)
        {<tr>
            <td>@Model.Employees[i].EmployeeID</td>
            <td>@Model.Employees[i].FName @Model.Employees[i].LName</td>
            <td>£@Model.Employees[i].Salaryint</td>
            <td>£@Model.Employees[i].Bonusint</td>
        </tr>}
    </table>
</div><br>

<div class="column">
    <div class="cards">
        <button class="menubtn" id="GetEmployee_Btn" onclick="ShowMenu_GetEmployeeBtn()">Get Employee</button>
    </div>
    <form id="getbyID_form" asp-controller="Perm" asp-action="Employee" method="get">
        <input type="number" name="id" size="4" min="0" placeholder="Employee ID" required/>
        <input type="submit" value="Submit"/>
    </form>
</div>

<div class="column">
    <div class="cards">
        <button class="menubtn" id="payCalculator_btn" onclick="ShowMenu_PayCalBtn()">Pay Calculator</button>
    </div>
    <form id="PayCal_form" asp-controller="Perm" asp-action="PayCal" method="get">
        <input type="number" name="id" size="4" min="0" placeholder="Employee ID" required/>
        <input type="submit" value="Submit"/>
    </form>
</div>

<div class="column">
    <div class="cards">
        <button class="menubtn" id="addEmployee_btn" onclick="ShowMenu_AddEmployeeBtn()">Add Employee</button>
    </div>
    <form id="Create_form" asp-controller="Perm" asp-action="Create" method="post">
        <input type="text" name="fname" pattern="[A-Za-z]+" placeholder="First Name" required/>
        <input type="text" name="lname" pattern="[A-Za-z]+" placeholder="Last Name" required/>
        <input type="number" name="salary" min="0" placeholder="Salary" required/>
        <input type="number" name="bonus" min="0" placeholder="Bonus" required/>
        <input type="submit" value="Create"/>
    </form>
</div>

<div class="column">
    <div class="cards">
        <button class="menubtn" id="editEmployee_btn" onclick="ShowMenu_EditEmployeeBtn()">Edit Employee</button>
    </div>
    <form id="Edit_form" asp-controller="Perm" asp-action="Edit" method="post">
        <input type="number" name="id" size="4" min="0" placeholder="Employee ID" required/>
        <input type="text" name="fname" pattern="[A-Za-z]+" placeholder="First Name"/>
        <input type="text" name="lname" pattern="[A-Za-z]+" placeholder="Last Name"/>
        <input type="number" name="salary" min="0" placeholder="Salary"/>
        <input type="number" name="bonus" min="0" placeholder="Bonus"/>
        <input type="submit" value="Update"/>
    </form>
</div>

<div class="column">
    <div class="cards">
        <button class="menubtn" id="GetEmployee_Btn" onclick="ShowMenu_DeleteEmployeeBtn()">Delete Employee</button>
    </div>
    <form id="Delete_form" asp-controller="Perm" asp-action="Delete" method="post">
        <input type="number" name="id" size="4" min="0" placeholder="Employee ID" required/>
        <input type="submit" value="Submit"/>
    </form>
</div>
